<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="2dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:foreground="@android:drawable/list_selector_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciViewID"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/sohag"
            android:padding="5sp"
            />


        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:id="@+id/iViewID"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/tViewNameID"
            android:layout_toRightOf="@id/ciViewID"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="This is Title"
            android:layout_centerInParent="true"
            />
        <ImageView

            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentRight="true"
            android:id="@+id/callButtonID"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/call_icon"
            android:clickable="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>