<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ক্রমিক নং:"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/chada_item_kromik_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/_a"
            android:layout_margin="5dp"
            android:text="   "
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/_b"
            android:layout_below="@id/_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="তারিখ:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/chada_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/_b"
            android:layout_below="@id/chada_item_kromik_no"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:text="12/12/12"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/_c"
            android:layout_below="@id/_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adaykari"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/chada_item_grahok_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/_c"
            android:layout_below="@id/chada_item_date"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"
            android:text="Mohiuddin"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/_d"
            android:layout_below="@id/_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="টাকা:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/chada_item_taka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/_d"
            android:layout_below="@id/chada_item_grahok_name"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:text="Mohiuddin"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>