<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="5dp"
            android:layout_height="80dp"
            android:id="@+id/bm_item_view"
            android:background="@color/colorRed"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bm_item_view"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/bm_item_call"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/bm_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Bangladesh"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorRed"/>
            <TextView
                android:id="@+id/bm_item_elaka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elaka Bitessor"/>

        </LinearLayout>




        <ImageView
            android:id="@+id/bm_item_call"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/call_icon"/>


    </RelativeLayout>




</androidx.cardview.widget.CardView>